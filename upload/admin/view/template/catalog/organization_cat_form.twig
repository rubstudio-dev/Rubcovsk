{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-organization-cat" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1>Категории организаций</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">{% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i
                        class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-organization-cat"
                      class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-name">Название категории</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" value="{{ cat_name }}" required
                                   placeholder="Название категории" id="input-name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-alias">Алиас категории</label>
                        <div class="col-sm-10">
                            <input type="text" name="alias" value="{{ cat_alias }}" required
                                   placeholder="Алиас категории" id="input-alias" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-cat-parent-select">Выбор родительской
                            категории</label>
                        <div class="col-sm-10">
                            <select name="parent_id" id="input-cat-parent-select" class="form-control">
                                <option value="0">-- Выберите родительскую категорию --</option>
                                {% for parent in parent_categories %}
                                    {% if parent.id == cat_parent_id %}
                                        <option value="{{ parent.id }}" selected="selected">{{ parent.name }}</option>
                                    {% else %}
                                        <option value="{{ parent.id }}">{{ parent.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-description">Описание категории</label>
                        <div class="col-sm-10">
                            <input type="text" name="description" value="{{ cat_description }}"
                                   placeholder="Описание категории" id="input-description" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
